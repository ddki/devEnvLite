{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"productName": "DvEnvLite",
	"version": "0.0.0",
	"identifier": "devenvlite.ddki.io.github",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "DevEnvLite",
				"label": "splashscreen",
				"url": "splashscreen.html",
				"width": 1200,
				"height": 800,
				"visible": true,
				"center": true,
				"shadow": true,
				"fullscreen": false
			},
			{
				"title": "DevEnvLite",
				"label": "main",
				"url": "index.html",
				"width": 1200,
				"height": 800,
				"visible": false,
				"resizable": true,
				"center": true,
				"shadow": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": {
				"default-src": "'self' customprotocol: asset:",
				"connect-src": "ipc: http://ipc.localhost",
				"font-src": [],
				"img-src": "'self' asset: http://asset.localhost blob: data:",
				"style-src": "'unsafe-inline' 'self'"
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"category": "DeveloperTool",
		"copyright": "ddki",
		"license": "GPL-3.0",
		"licenseFile": "../LICENSE",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
