{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "DevEnvLite",
	"version": "0.1.0",
	"identifier": "devenvlite.ddki.io.github",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"title": "DevEnvLite",
				"label": "main",
				"url": "/",
				"width": 1200,
				"height": 800,
				"visible": true,
				"resizable": true,
				"center": true,
				"shadow": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": {
				"default-src": "'self' customprotocol: asset:",
				"connect-src": "ipc: http://ipc.localhost",
				"font-src": [],
				"img-src": "'self' asset: http://asset.localhost blob: data:",
				"style-src": "'unsafe-inline' 'self'"
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"category": "DeveloperTool",
		"copyright": "ddki",
		"license": "GPL-3.0",
		"licenseFile": "../LICENSE",
		"createUpdaterArtifacts": true,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"endpoints": ["https://github.com/ddki/devEnvLite/releases/latest/download/latest.json"],
			"active": true,
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZBQjBBRDA0NTQyNEY1QgpSV1JiVDBKRjBBcXJEOTFmWkJ5cDVEOW5NZnlQOGpsbXJOekxVMXJtRHhYOHYwZis1d2tYT0FmeAo=",
			"windows": {
				"installMode": "passive"
			}
		}
	}
}
